<section class="py-16">
  <div class=" px-8 lg:px-10">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div class="border-l flex flex-col items-start lg:pl-8 pl-4">
        <div class="mb-2 font-semibold tracking-wide">DÃ­as restantes</div>
        <div id="days" class="text-4xl md:text-6xl font-bold text-nex-dark">
          00
        </div>
      </div>

      <div class="border-l flex flex-col items-start lg:pl-8 pl-4">
        <div class="mb-2 font-semibold tracking-wide">Horas restantes</div>
        <div id="hours" class="text-4xl md:text-6xl font-bold text-nex-dark">
          00
        </div>
      </div>

      <div class="border-l flex flex-col items-start lg:pl-8 pl-4">
        <div class="mb-2 font-semibold tracking-wide">Minutos restantes</div>
        <div id="minutes" class="text-4xl md:text-6xl font-bold text-nex-dark">
          00
        </div>
      </div>

      <div class="border-l flex flex-col items-start lg:pl-8 pl-4">
        <div class="mb-2 font-semibold tracking-wide">Segundos restantes</div>
        <div id="seconds" class="text-4xl md:text-6xl font-bold text-nex-dark">
          00
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Countdown Timer
  function updateCountdown() {
    const now = new Date().getTime();
    const launchDate = new Date("2025-12-31 23:59:59").getTime();
    const distance = launchDate - now;

    if (distance > 0) {
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor(
        (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
      );
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById("days").textContent = days
        .toString()
        .padStart(2, "0");
      document.getElementById("hours").textContent = hours
        .toString()
        .padStart(2, "0");
      document.getElementById("minutes").textContent = minutes
        .toString()
        .padStart(2, "0");
      document.getElementById("seconds").textContent = seconds
        .toString()
        .padStart(2, "0");
    }
  }

  // Update countdown every second
  setInterval(updateCountdown, 1000);
  updateCountdown(); // Initial call
</script>
